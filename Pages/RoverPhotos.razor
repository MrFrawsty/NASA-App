@code {

    static readonly string roverPath = "https://api.nasa.gov/mars-photos/api/v1/rovers/curiosity/photos?earth_date=2015-6-3&api_key=HbTKyhkhfs0fqB7QalcH4XuQJ9VzelFT3Lgxxspa";

    Rover rover;
    Uri imageUri;
    RoverService roverService = new RoverService();

    protected override async Task OnInitializedAsync()
    {
        rover = await roverService.GetRoverDataAsync(roverPath);
    }
}
