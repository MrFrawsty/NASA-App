            imageUri = rover.Img_Src;


            <div class="container-fluid">

                <div class="row">
                    <div class="col">
                        <header>
                            <h1>
                              
                            </h1>
                        </header>
                    </div>

                </div>
                <div class="row">
                  


                    <div class="col">
                                            
                            <a href="@imageUri" target="_blank">
